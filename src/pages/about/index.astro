  </div>
 </main>
</Layout>

<style>
  ul {
  @apply list-disc list-inside;
}
ol {
  @apply list-decimal list-inside;
}

  .about-page {
    background: #eaf6fb;
    color: #8c6f6f;
    padding: 2rem;
  }
  .about-page.pink {
    background: #fffafc;
  }
  .container {
    display: flex;
    border: 2px dashed #b6deef;
    background: #e0f4ff;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 0 10px #bce4f5;
  }
  .container.pink {
    border: 2px dashed #f5ccd7;
    background: #fff0f5;
    box-shadow: 0 0 10px #fddde6;
  }
  .sidebar {
    width: 20%;
    text-align: center;
  }

  .about-content {
    width: 60%;
    padding: 0 2rem;
  }
  .about-content .title {
    font-size: 2rem;
    text-align: center;
    color: #5596c2;
  }
  .about-content.pink .title {
    color: #d982ab;
  }
  .bio article {
    background: #f0fbff;
    border-left: 4px dotted #a0c8e0;
    padding: 1rem;
    margin-bottom: 1rem;
    border-radius: 10px;
  }
  .bio.pink article {
    background: #fff7f9;
    border-left: 4px dotted #eecad4;
  }
  .profile {
    width: 20%;
    text-align: center;
  }
  .profile .full-art {
    width: 100%;
    border-radius: 20px;
  }
  .info-box {
    background: #fdecef;
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 10px;
    border: 1px dashed #e7b8c6;
  }
  .info-box strong {
    color: #d1829b;
  }

  .about-page.pink .info-box {
    background: #fdecef;
    border-color: #e7b8c6;
  }
  .about-page.pink .info-box strong {
    color: #d1829b;
  }
</style>
