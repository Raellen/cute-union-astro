---
import { getCollection,getEntry } from "astro:content";

import Layout from "@/layouts/Layout.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import PostCard from "@/components/PostCard.astro";
import UpdateCard from "@/components/UpdateCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import Link from "@/components/shared/Link.astro";
import convertAsteriskToStrongTag from "@/utils/convertAsteriskToStrongTag";

import presentation from "@/data/presentation";
import projects from "@/data/projects";

const posts = await getCollection("posts");
const updates = await getCollection("updates");
const todoList = await getEntry('posts', 'todo-list');
const { Content } = await todoList.render(); //
---

<Layout>
  <main class="flex flex-col gap-20 px-10">
    <article class="flex flex-col gap-8">
      <div class="flex">
        {updates}
        <h1 class="text-primary text-3xl">{presentation.title}</h1>
        <img class="object-contain" src="/images/icons/i16-1.gif" />
      </div>

      <h2
        class="max-w-[60ch] leading-6"
        set:html={convertAsteriskToStrongTag(presentation.description)}
      />
      <!-- <SocialLinks /> -->
    </article>

    <div class="flex flex-col md:flex-row gap-8">
      <article class="flex flex-col gap-8 w-3/4">
        <h3 class="text-primary text-lg font-bold">Updates</h3>
        <section class="flex flex-col max-h-[250px] p-4 gap-4 overflow-y-scroll bg-white w-full">
          {
      updates.length !== 0 &&
        updates
          .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())
          .slice(0, 10)
          .map(async (update) => { // <-- 1. 加上 async
            const { Content } = await update.render(); // <-- 2. 取得 Content 元件
            return (
              <UpdateCard
                publishedAt={update.data.publishedAt}
                title={update.data.title}
                slug={update.slug}
              >
                <Content /> 
              </UpdateCard>
            );
          })
    }
    <Link href="/updates" label="...See all updates" target="_self" />
        </section> 
      </article>

      <article class="flex flex-col gap-8 w-1/4">
        <h3 class="text-primary text-lg font-bold">Todo List</h3>
        <div class="overflow-auto bg-white h-max-content max-h-[250px] break-words p-4 max-w-fit text-sm leading-7">
          <Content/>
          <Link href="/posts/todo-list" label="...See all todos"  target="_self" />
        </div>
      </article>
    </div>

    <article class="flex flex-col gap-8">
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 class="text-primary text-lg font-bold">Latest posts</h3>
      </header>
      {posts.length === 0 && <p>Soon, stay connected 👀...</p>}

      <section class="flex flex-col gap-4 md:flex-row md:flex-wrap">
        {
          posts.length !== 0 &&
            posts
              .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())
              .slice(0, 2)
              .map((post) => (
                <PostCard
                  publishedAt={post.data.publishedAt}
                  title={post.data.title}
                  description={post.data.description}
                  slug={post.slug}
                />
              ))
        }
      </section>
      <Link href="/posts" label="See all posts" isUnderline target="_self" />
    </article>

    <!-- <article class="flex flex-col gap-8">
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 class="text-lg text-primary">
          Selected projects ({projects.length})
        </h3>
      </header>
      {projects.length === 0 && <p>Oops, I must work^^^^^</p>}

      <section class="flex flex-col gap-4">
        {
          projects.length !== 0 &&
            projects.map((project) => <ProjectCard {...project} />)
        }
      </section>
    </article> -->

    <!-- Email me at <Link
          href={`mailto:${presentation.mail}`}
          label={presentation.mail}
        /> -->

   
  </main>
</Layout>
