---
import Sidebar from "../components/Sidebar.astro";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@/styles/tailwind.css";
import "@/styles/post.css";
import "@/styles/main.css";
import "@/styles/commentbox.css"
export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEOTags title={title} />

    </style>
  </head>
  <body>
    <div class="outer-box">
      <div class="layout-container">
        <Sidebar />

        <main class="main-content">
          <slot />
        </main>
      </div>
    </div>

    <footer class="flex flex-col items-center justify-between overflow-hidden">
      <!-- FC2計數器 開始 -->
      <script
        language="javascript"
        type="text/javascript"
        src="//counter1.fc2.com/counter.php?id=18028122&main=1"
      ></script><noscript
        ><img
          src="//counter1.fc2.com/counter_img.php?id=18028122&main=1"
        /></noscript
      >
      <!-- FC2計數器 結束 -->
      <span class="text-light-blue">
        Copyright © <span id="current-year"></span> Mint Sorai
      </span>
    </footer>

    <script>
      const yearSpan = document.getElementById("current-year");
      if (yearSpan) {
        yearSpan.textContent = new Date().getFullYear().toString();
      }
    </script>
  </body>
</html>


    <style>
      body.pink {
        background-color: #fff4fa;
        margin: 0;
        color: #775f6c;
      }
      body {
        background-color: #eaf6fb;
        margin: 0;
        @apply font-gothic;
        color: #3b4f58ff;
        background-image: url("/src/images/background/sky-bg.png");
        background-size: cover;
        font-family:ms gothic;
      }

      footer.pink {
        margin-top: 2rem;
        padding: 1rem;
        text-align: center;
        font-size: 0.8rem;
        color: #b889a3;
      }
      footer {
        margin-top: 2rem;
        padding: 1rem;
        text-align: center;
        font-size: 0.8rem;
        color: #7095ab;
      }
      .outer-box.pink {
        margin: 2rem auto;
        max-width: 1200px;
        border: 3px dotted #f5ccd7;
        border-radius: 20px;
        background-color: #fff0f5;
        box-shadow: 0 0 10px #fddde6;
        padding: 1rem;
      }
      .outer-box {
        margin: 2rem auto;
        max-width: 1200px;
        border: 3px dotted #b6deef;
        border-radius: 20px;
        background-color: #e0f4ffe0;
        box-shadow: 0 0 10px #bce4f5;
        padding: 1rem;
      }
      .layout-container {
        display: flex;
        padding: 1rem;
        min-height: 60vh;
      }

      .main-content {
        width: 80%;
        padding: 0 2rem;
        overflow-y: scroll;
      }
      .info-box {
        background: #def4fc;
        margin-top: 1rem;
        padding: 1rem;
        border-radius: 10px;
        border: 1px dashed #a8d4e7;
      }
      .info-box strong {
        color: #5a93b8;
      }
      .info-box.pink {
        background: #fdecef;
        margin-top: 1rem;
        padding: 1rem;
        border-radius: 10px;
        border: 1px dashed #e7b8c6;
      }
      .info-box.pink strong {
        color: #d1829b;
      }
      ::-webkit-scrollbar {
        width: 12px;
      }
      ::-webkit-scrollbar-track {
        background: #cfefff;
      }
      ::-webkit-scrollbar-thumb {
        background: #ffffffa6;
        border-radius: 8px;
        border: 2px solid #a0d6ef;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #f5faff8d;
      }
      * {
        scrollbar-width: thin;
        scrollbar-color: white #cfefff;
      }
      /* Pink version scrollbar */
      .pink ::-webkit-scrollbar-track {
        background: #ffe5f0;
      }
      .pink ::-webkit-scrollbar-thumb {
        background: #ffffffcc;
        border: 2px solid #f5b7cd;
      }
      .pink ::-webkit-scrollbar-thumb:hover {
        background: #fff0f6cc;
      }
      .pink * {
        scrollbar-color: white #ffe5f0;
      }