---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header
  class="header px-10 pt-2 pb-12 z-40 flex  w-full flex-col gap-2 md:flex-row md:justify-between"
>
  <a href="/" class="hover:text-neutral-900">
    <img src={presentation.buttons[0].img} alt="home" />
  </a>

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/about"
          class:list={{
            ["hover:text-neutral-900"]: true,
            ["text-neutral-900"]: pathname === "/about",
          }}><img src={presentation.buttons[1].img} alt="about" /></a
        >
      </li>
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-neutral-900"]: true,
            ["text-neutral-900"]: pathname === "/posts",
          }}><img src={presentation.buttons[2].img} alt="home" /></a
        >
      </li>
      <li>
        <a
          href="/links"
          class:list={{
            ["hover:text-neutral-900"]: true,
            ["text-neutral-900"]: pathname === "/posts",
          }}><img src={presentation.buttons[3].img} alt="links" /></a
        >
      </li>
    </ul>
  </nav>
  <style>
    .header {
      background-image: url("/images/background/117.gif");
      background-repeat: repeat-x;
    background-position: 0 100%;
    }
  </style>
</header>
