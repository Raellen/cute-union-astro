---
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  publishedAt: Date;
  description: string;
  slug: string;
};

const { title, publishedAt, description, slug } = Astro.props;
---

<a
  class="group flex max-w-sm flex-col gap-2 rounded-md  transition-all duration-300 "
>
  <div
    class="flex w-full flex-col justify-between gap-2 md:flex-row md:items-center"
  >
    <p class="text-primary">{formatDate(publishedAt)}</p>
    <div class="flex flex-row items-center gap-4">

    </div>
  </div>

  <p>
    {description}
  </p>
</a>
